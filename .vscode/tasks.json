{
	"version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Compilar OpenGL",
            "command": "C:\\mingw64\\bin\\gcc.exe", 
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${fileDirname}\\*.c",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-I", "C:\\mingw64\\include",
                "-L", "C:\\mingw64\\lib",
                "-lfreeglut",
                "-lopengl32",
                "-lglu32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Compilador com flags OpenGL"
        }
	]
}